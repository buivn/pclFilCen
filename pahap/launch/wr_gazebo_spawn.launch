<?xml version="1.0" encoding="UTF-8"?>
<launch>   
    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find pcd_filter)/worm_robot_description/urdf/wormRobot.xacro'"/>

    <arg name="x" default="0.0"/>
    <arg name="y" default="0.0"/>
    <arg name="z" default="0.06"/>

    <!-- <arg name="paused" default="false"/> -->
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>

    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(find pcd_filter)/wr_gazebo/worlds/wr_robot.world"/>
        <!-- <arg name="paused" value="$(paused)"/> -->
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="headless" value="$(arg headless)"/> 
        <!-- <arg name="recording" value="false"/> -->
        <arg name="debug" value="$(arg debug)"/>
    </include>

    <!-- Spawn the model on Gazebo -->
    <node name="worm_robot_spawn" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen" args="-urdf -unpause -param robot_description -model wormRobot -x 0.0 -y 0.0 -z 0.06"/>
</launch>